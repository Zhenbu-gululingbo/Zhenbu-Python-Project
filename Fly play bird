import pygame
import sys
import random

# 初始化
pygame.init()

# 屏幕设置
SCREEN_WIDTH, SCREEN_HEIGHT = 400, 600
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption("Flappy Bird")

# 颜色
WHITE = (255, 255, 255)
GREEN = (0, 255, 0)
BLUE = (0, 0, 255)

# 游戏角色
bird_size = 30
bird_pos = [SCREEN_WIDTH // 4, SCREEN_HEIGHT // 2]
bird_velocity = 0
gravity = 0.5
flap_strength = -8

# 管道设置
pipe_width = 70
pipe_gap = 150
pipe_velocity = 3
pipe_frequency = 1500  # 毫秒
last_pipe = pygame.time.get_ticks() - pipe_frequency

pipes = []

def create_pipe():
    height = random.randint(100, 400)
    top_pipe = pygame.Rect(SCREEN_WIDTH, 0, pipe_width, height)
    bottom_pipe = pygame.Rect(SCREEN_WIDTH, height + pipe_gap, pipe_width, SCREEN_HEIGHT - height - pipe_gap)
    return top_pipe, bottom_pipe

def move_pipes(pipes):
    for pipe in pipes:
        pipe.x -= pipe_velocity
    return [pipe for pipe in pipes if pipe.x + pipe_width > 0]

def draw_pipes(pipes):
    for pipe in pipes:
        pygame.draw.rect(screen, GREEN, pipe)

def check_collision(bird_rect, pipes):
    for pipe in pipes:
        if bird_rect.colliderect(pipe):
            return True
    if bird_rect.top <= 0 or bird_rect.bottom >= SCREEN_HEIGHT:
        return True
    return False

# 游戏循环
running = True
while running:
    screen.fill(WHITE)
    
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
            pygame.quit()
            sys.exit()
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_SPACE:
                bird_velocity = flap_strength

    # 小鸟运动
    bird_velocity += gravity
    bird_pos[1] += bird_velocity
    bird_rect = pygame.Rect(bird_pos[0], bird_pos[1], bird_size, bird_size)

    # 管道生成
    time_now = pygame.time.get_ticks()
    if time_now - last_pipe > pipe_frequency:
        pipes.extend(create_pipe())
        last_pipe = time_now

    # 管道移动
    pipes = move_pipes(pipes)

    # 碰撞检测
    if check_collision(bird_rect, pipes):
        print("游戏结束")
        running = False

    # 绘制小鸟和管道
    pygame.draw.ellipse(screen, BLUE, bird_rect)
    draw_pipes(pipes)

    pygame.display.flip()
    pygame.time.Clock().tick(60)

pygame.quit()
